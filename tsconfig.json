{
	"compileOnSave": true,
	"compilerOptions": {
		"lib": ["es2020", "dom"],
		"target": "ES2020",
		"module": "CommonJS",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"isolatedModules": true,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"outDir": "lib",
		"declaration": true,
		"declarationMap": false,
		"removeComments": true,
		"importHelpers": false,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src"],
	"exclude": ["node_modules", "lib", "tests", "**/*.test.ts", "**/*.spec.ts"]
}
